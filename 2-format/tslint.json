{
  "extends": "../tslint.json",
  "rules": {
    "align": [true, "arguments", "elements", "members", "parameters", "statements"],
    "class-name": true,
    "curly": true,
    "file-name-casing": [true, "kebab-case"],
    "import-spacing": true,
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-consecutive-blank-lines": true,
    "no-console": true,
    "no-irregular-whitespace": true,
    "no-empty": false,
    "space-within-parens": [true, 1],
    "triple-equals": [true, "allow-null-check"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ]
  }
}
